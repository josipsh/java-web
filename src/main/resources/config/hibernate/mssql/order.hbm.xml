<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="hr.algebra.models.Order" table="Order">
        <id name="id">
            <column name="Id"/>
            <generator class="identity"/>
        </id>

        <many-to-one name="user" class="hr.algebra.models.User" lazy="false">
            <column name="UserId" />
        </many-to-one>
        <many-to-one name="paymentMethod" class="hr.algebra.models.PaymentMethod" lazy="false">
            <column name="PaymentMethodId" />
        </many-to-one>
        <many-to-one name="deliveryDetails" class="hr.algebra.models.OrderDeliveryDetails" lazy="false">
            <column name="DeliveryDetailsId" />
        </many-to-one>
        <set name="products" table="Product" fetch="select" lazy="false">
            <key>
                <column name="ProductId" not-null="true"/>
            </key>
            <one-to-many class="hr.algebra.models.Product" />
        </set>
    </class>
</hibernate-mapping>